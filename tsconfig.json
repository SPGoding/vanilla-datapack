{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2015",
        "rootDir": "scripts",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "declaration": true,
        "newLine": "LF",
        "resolveJsonModule": true
    }
}
